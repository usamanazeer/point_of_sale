@model TaxDto
@{
    ViewData["Title"] = "Edit - Tax";
}
@section Scripts{
    <environment include="Development">
        <script src="~/js/Areas/GeneralSettings/Taxes/Edit.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Areas/GeneralSettings/Taxes/Edit.min.js" asp-append-version="true"></script>
    </environment>
}
<section id="basic-form-layouts">
    <div class="row">
        <div class="col-sm-12">
            <div class="content-header">Edit Tax</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-content">
                    <div class="px-3">
                        <form id="edit-tax-form" class="form" autocomplete="off" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-body">
                                <h4 class="form-section"><i class="icon-info"></i> General</h4>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Name"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="@Model.Name" type="text" class="form-control border-grey" required />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Amount"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="@Model.Amount" type="number" step="any" class="form-control border-grey" required />
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.AccountNo"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="@Model.AccountNo" type="number" class="form-control border-grey" required />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="custom-control custom-switch" style="margin-left: 15px;">
                                                <input type="checkbox" asp-for="IsInPercent" class="custom-control-input" id="isInPercentSwitch">
                                                <label class="custom-control-label" asp-for="IsInPercent" for="isInPercentSwitch"></label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <div class="custom-control custom-switch" style="margin-left: 15px;">
                                                <input type="checkbox" asp-for="EnableForPos" class="custom-control-input" id="enableForPOSSwitch">
                                                <label class="custom-control-label" asp-for="EnableForPos" for="enableForPOSSwitch"></label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Status"></label>&nbsp;<span class="red">*</span>
                                            <select asp-for="Status" class="form-control border-grey" required>
                                                <option value="">Select Status</option>
                                                <option value="1">Active</option>
                                                <option value="2">InActive</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions right">
                                <button id="btn-edit-tax" type="submit" class="btn btn-raised btn-success" style="float: right" value="Save">Save</button>
                                @*<button type="reset" class="btn btn-raised btn-warning mr-1" style="float:right">
                                        <i class=""></i> Reset
                                    </button>*@
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
