@model InvVendorDto

@{
    ViewData[index: "Title"] = "Create - Vendor";
}

@section Scripts{
    <script>
        bindSubmit('create-vendor-form', 'btn-create-vendor', '/Vendors/Create', true);
    </script>
}

<section id="basic-form-layouts">
    <div class="row">
        <div class="col-sm-12">
            <div class="content-header">Create Vendor</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-content">
                    <div class="px-3">
                        <form id="create-vendor-form" class="form" autocomplete="off" asp-route="CreateVendor" method="post">
                            <div class="form-body">
                                <h4 class="form-section"><i class="ft-user-plus"></i> General</h4>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.ContactName"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="@Model.ContactName" type="text" class="form-control border-grey" required />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.CompanyName"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="@Model.CompanyName" type="text" class="form-control border-grey" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.City"></label>&nbsp;<span class="red"></span>
                                            <input asp-for="@Model.City" type="text" class="form-control border-grey" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.Country"></label>&nbsp;<span class="red"></span>
                                            <input asp-for="@Model.Country" type="text" class="form-control border-grey" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Address"></label>&nbsp;<span class="red"></span>
                                            <input asp-for="@Model.Address" type="text" class="form-control border-grey" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.PrimaryEmail"></label>&nbsp;<span class="red"></span>
                                            <input asp-for="@Model.PrimaryEmail" type="email" class="form-control border-grey" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.OtherEmail"></label>&nbsp;<span class="red"></span>
                                            <input asp-for="@Model.OtherEmail" type="email" class="form-control border-grey" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.Phone"></label>&nbsp;<span class="red"></span>
                                            <input asp-for="@Model.Phone" type="tel" class="form-control border-grey" />
                                            <span asp-validation-for="@Model.Phone" class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.Mobile"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="@Model.Mobile" type="text" min="11" maxlength="15" class="form-control border-grey" required="required">
                                            <span asp-validation-for="@Model.Mobile" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.AccountNo"></label>&nbsp;<span class="red"></span>
                                            <input asp-for="@Model.AccountNo" type="text" maxlength="50" class="form-control border-grey" />
                                            @*<span asp-validation-for="@Model.AccountNo" class="text-danger"></span>*@
                                        </div>
                                    </div>
                                </div>
                                @*<h4 class="form-section"><i class="fa fa-key"></i> Account Info</h4>*@

                                @*<div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="@Model.UserName"></label>&nbsp;<span class="red">*</span>
                                                <input asp-for="@Model.UserName" type="text" class="form-control border-grey" required />
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="@Model.Password"></label>&nbsp;<span class="red">*</span>
                                                <input asp-for="@Model.Password" type="password" class="form-control border-grey" required />
                                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="@Model.RoleId"></label>&nbsp;<span class="red">*</span>
                                                <select asp-for="@Model.RoleId" asp-items="RolesSelectList" class="custom-select" required>
                                                    <option value="">Select Role</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>*@
                            </div>

                            <div class="form-actions right">

                                <button id="btn-create-vendor" type="submit" class="btn btn-raised btn-primary" style="float: right" value="Create">Create</button>
                                <button type="reset" class="btn btn-raised btn-warning mr-1" style="float: right">
                                    <i class=""></i> Reset
                                </button>

                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>