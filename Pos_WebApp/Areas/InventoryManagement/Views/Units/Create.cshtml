@model InvUnitDto
@{
    ViewData["Title"] = "Create - Unit";
}

@section Scripts{
    <script>
        bindSubmit('create-unit-form', 'btn-create-unit', '/Units/Create', true);
    </script>
}

<section id="basic-form-layouts">
    <div class="row">
        <div class="col-sm-12">
            <div class="content-header">Create Unit</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-content">
                    <div class="px-3">
                        <form id="create-unit-form" class="form" autocomplete="off" asp-route="CreateUnit" method="post" enctype="multipart/form-data">
                            <div class="form-body">
                                <h4 class="form-section"><i class="icon-info"></i> General</h4>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Name"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="@Model.Name" type="text" class="form-control border-grey" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label asp-for="@Model.Description"></label>&nbsp;<span class="red"></span>
                                            <textarea asp-for="@Model.Description" type="text" class="form-control border-grey"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-actions right">

                                <button id="btn-create-unit" type="submit" class="btn btn-raised btn-primary" style="float:right" value="Create">Create</button>
                                <button type="reset" class="btn btn-raised btn-warning mr-1" style="float:right">
                                    <i class=""></i> Reset
                                </button>

                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
