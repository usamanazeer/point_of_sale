@model DeliDeliveryBoyDto
@{
    ViewData["Title"] = "DeliveryBoy - Edit";
}
@section Scripts{
    <script>
        bindSubmit('edit-delivery-boy-form', 'btn-edit-delivery-boy', '/DeliveryBoys/Edit', false, true);
    </script>
}
<section id="basic-form-layouts">
    <div class="row">
        <div class="col-sm-12">
            <div class="content-header">Edit - DeliveryBoy</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-content">
                    <div class="px-3">
                        <form id="edit-delivery-boy-form" class="form" autocomplete="off" method="post">
                            <div class="form-body">
                                <input type="hidden" asp-for="Id"/>
                                <h4 class="form-section"><i class="icon-info"></i> General</h4>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Name"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="Name" type="text" class="form-control border-grey" required/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="ContactNo"></label>&nbsp;<span class="red"></span>
                                            <input asp-for="ContactNo" type="text" maxlength="15" class="form-control border-grey"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Cnic"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="Cnic" type="text" maxlength="13" class="form-control border-grey"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="BikeNo"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="BikeNo" type="text" maxlength="10" class="form-control border-grey"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Email"></label>&nbsp;<span class="red"></span>
                                            <input asp-for="Email" type="email" maxlength="50" class="form-control border-grey"/>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Status"></label>&nbsp;<span class="red">*</span>
                                            <select asp-for="Status" class="form-control border-grey" required>
                                                <option value="">Select Status</option>
                                                <option value="1">Active</option>
                                                <option value="2">InActive</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions right">

                                <button id="btn-edit-delivery-boy" type="submit" class="btn btn-raised btn-success" style="float:right" value="Save">Save</button>
                                @*<button type="reset" class="btn btn-raised btn-warning mr-1" style="float:right">
                                        <i class=""></i> Reset
                                    </button>*@

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
