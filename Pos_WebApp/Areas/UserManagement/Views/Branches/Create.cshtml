@model BranchDto
@{
    ViewData["Title"] = "Create - Branch";
}
@section Scripts{
    @if (Model.Response != null)
    {
        <script type="text/javascript">
            AlertManager.AlertSweetly(JSON.parse('@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Response))'), '/Branches/Create');
        </script>
        @if (Model.Response.ErrorOccured)
        {
            @if (Model.Response.ErrorCode == StatusCodes.Error_Occured.ToInt())
            {
                <script type="text/javascript">
                      sweetAlert.error({ text: '@Model.Response.ErrorMessage' });
                </script>
            }
        }
    }
}
<section id="basic-form-layouts">
    <div class="row">
        <div class="col-sm-12">
            <div class="content-header">Create Branch</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-content">
                    <div class="px-3">
                        <form class="form" autocomplete="off" asp-route="CreateBranch" method="post" enctype="multipart/form-data">
                            <div class="form-body">
                                <h4 class="form-section"><i class="icon-info"></i> General</h4>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.Name"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="@Model.Name" type="text" class="form-control border-grey" required />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.Phone"></label>&nbsp;<span class="red"></span>
                                            <input asp-for="@Model.Phone" type="text" class="form-control border-grey" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.City"></label>&nbsp;<span class="red"></span>
                                            <input asp-for="@Model.City" type="text" class="form-control border-grey" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.Address"></label>&nbsp;<span class="red"></span>
                                            <input asp-for="@Model.Address" type="text" class="form-control border-grey" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions right">
                                <input type="submit" class="btn btn-raised btn-primary" style="float:right" value="Create" />
                                <button type="reset" class="btn btn-raised btn-warning mr-1" style="float:right">
                                    <i class=""></i> Reset
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
