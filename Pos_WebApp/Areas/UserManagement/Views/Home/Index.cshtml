@section Styles{
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/chartist.min.css" asp-append-version="true">
    <style>
        table tbody {
            display: block;
            max-height: 300px;
            overflow-y: scroll;
        }

