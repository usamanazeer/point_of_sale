@model RestDiningTableDto
@{
    ViewData["Title"] = "Create - Dining Table";
    var Floors = (IList<RestRestaurantFloors_SLM>)ViewBag.Floors ?? new List<RestRestaurantFloors_SLM>();
    var FloorsSelectList = new SelectList(Floors, "Value", "Text");
}
@section Scripts{
    <script>
        bindSubmit('create-dining-table-form', 'btn-create-dining-table', '/DiningTables/Create', true, true);
    </script>
}
<section id="basic-form-layouts">
    <div class="row">
        <div class="col-sm-12">
            <div class="content-header">Create Dining-Table</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-content">
                    <div class="px-3">
                        <form id="create-dining-table-form" class="form" autocomplete="off" asp-route="CreateDiningTable" method="post">
                            <div class="form-body">
                                <h4 class="form-section"><i class="ft-user-plus"></i> General</h4>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.TableNo"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="@Model.TableNo" type="number" step="1" class="form-control border-grey" required />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.Capacity"></label>&nbsp;<span class="red">*</span>
                                            <input asp-for="@Model.Capacity" type="number" min="1" step="1" class="form-control border-grey" required />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="@Model.FloorId"></label>&nbsp;<span class="red">*</span>
                                            <select asp-items="FloorsSelectList" asp-for="@Model.FloorId" class="select form-control border-grey" required>
                                                <option value=""></option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions right">
                                <button id="btn-create-dining-table" type="submit" class="btn btn-raised btn-primary" style="float:right" value="Create">Create</button>
                                <button type="reset" class="btn btn-raised btn-warning mr-1" style="float:right">
                                    <i class=""></i> Reset
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>